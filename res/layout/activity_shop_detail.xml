<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".ShopDetail"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

	 	<LinearLayout 
		 	android:id="@+id/address_layout"
		 	android:layout_width="fill_parent"
		 	android:layout_height="wrap_content"
		 	android:orientation="horizontal" >
	 	    <ImageView 
		 	    android:id="@+id/shop_image"
		 	    android:layout_width="150dp"
		 	    android:layout_height="100dp"
		 	    android:src="@drawable/hamburger_icon"/>
		 	<TextView
		        android:id="@+id/shop_address"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="1dp"
		        android:text="address" />
		</LinearLayout>
	 	
	    <LinearLayout
	        android:id="@+id/shop_schedule"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center_horizontal"
	        android:layout_marginTop="10dp" >
		 	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <TextView android:textStyle="bold" android:text="Monday:"
		            android:layout_width="120dp" android:layout_height="wrap_content"/>
		        <TextView android:layout_marginLeft="2dp" android:text="9:00 - 21:00"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		 	</LinearLayout>
		 	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <TextView android:textStyle="bold" android:text="Tuesday:"
		            android:layout_width="120dp" android:layout_height="wrap_content"/>
		        <TextView android:layout_marginLeft="2dp" android:text="9:00 - 21:00"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		 	</LinearLayout>
		 	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <TextView android:textStyle="bold" android:text="Wednesday:"
		            android:layout_width="120dp" android:layout_height="wrap_content"/>
		        <TextView android:layout_marginLeft="2dp" android:text="9:00 - 21:00"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		 	</LinearLayout>
		 	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <TextView android:textStyle="bold" android:text="Thursday:"
		            android:layout_width="120dp" android:layout_height="wrap_content"/>
		        <TextView android:layout_marginLeft="2dp" android:text="9:00 - 21:00"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		 	</LinearLayout>
		 	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <TextView android:textStyle="bold" android:text="Friday:"
		            android:layout_width="120dp" android:layout_height="wrap_content"/>
		        <TextView android:layout_marginLeft="2dp" android:text="9:00 - 21:00"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		 	</LinearLayout>
		 	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <TextView android:textStyle="bold" android:text="Saturday:"
		            android:layout_width="120dp" android:layout_height="wrap_content"/>
		        <TextView android:layout_marginLeft="2dp" android:text="9:00 - 21:00"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		 	</LinearLayout>
		 	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <TextView android:textStyle="bold" android:text="Sunday:"
		            android:layout_width="120dp" android:layout_height="wrap_content"/>
		        <TextView android:layout_marginLeft="2dp" android:text="9:00 - 21:00"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		 	</LinearLayout>
	    </LinearLayout>

	    <Button
	        android:id="@+id/shop_open"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="0dp"
	        android:layout_gravity="right"
	        android:background="@android:color/transparent"
	        android:gravity="right"
	        android:onClick="openButton"
	        android:text="I&apos;m here"
	        android:textStyle="bold"
	        android:textColor="@android:color/holo_blue_light" />

    
</LinearLayout>