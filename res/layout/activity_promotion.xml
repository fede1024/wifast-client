<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PromotionActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Promotions" />

    <TextView 
        android:id="@+id/points_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_gravity="right" />
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/menu_item"
        android:id="@+id/points0_layout" >

        <TextView
            android:id="@+id/points0_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.35"
            android:text="No promotion"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/menu_item"
        android:id="@+id/points10_layout" >
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="10 points"
        android:layout_marginLeft="5dp"
        android:id="@+id/points10_1" />
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:text="-1€"
        android:gravity="right"
        android:layout_marginLeft="5dp"
        android:id="@+id/points10_2" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/menu_item"
        android:layout_marginTop="5dp"
        android:id="@+id/points40_layout" >
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="40 points"
        android:layout_marginLeft="5dp"
        android:id="@+id/points40_1" />
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:text="-5€"
        android:gravity="right"
        android:layout_marginLeft="5dp"
        android:id="@+id/points40_2" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/menu_item"
        android:layout_marginTop="5dp"
        android:id="@+id/points70_layout" >
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="70 points"
        android:layout_marginLeft="5dp"
        android:id="@+id/points70_1" />
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:text="-10€"
        android:layout_marginLeft="5dp"
        android:gravity="right"
        android:id="@+id/points70_2" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/menu_item"
        android:layout_marginTop="5dp"
        android:id="@+id/points100_layout" >
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="100 points"
        android:layout_marginLeft="5dp"
        android:id="@+id/points100_1" />
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="right"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:text="-15€"
        android:layout_marginLeft="5dp"
        android:id="@+id/points100_2" />
    </LinearLayout>

</LinearLayout>
