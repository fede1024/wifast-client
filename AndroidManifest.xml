<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.eurecom.wifast"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name="fr.eurecom.wifast.WiFastApp"
        android:allowBackup="true"
        android:icon="@drawable/hamburger_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="fr.eurecom.wifast.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="fr.eurecom.wifast.MenuActivity" >
        </activity>
        <activity android:name="fr.eurecom.wifast.CartActivity" >
        </activity>
        <activity
            android:name="fr.eurecom.wifast.ShopsListDialog"
            android:label="@string/title_activity_shopslist_dialog" >
        </activity>
        <activity
            android:name="fr.eurecom.wifast.EnableSettingsDialog"
            android:label="@string/title_enable_settings_dialog"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="fr.eurecom.wifast.SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.eurecom.wifast.ShopListActivity"
            android:label="@string/title_activity_shop_list"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
    </application>

</manifest>
